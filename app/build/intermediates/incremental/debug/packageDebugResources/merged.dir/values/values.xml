<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent_color">#262626</color>
    <color name="ic_launcher_background">#373737</color>
    <color name="light_accent">#353535</color>
    <color name="text_color">#D3D3D3</color>
    <color name="white_background">#1F1F1F</color>
    <style name="Theme.ReminderApp" parent="Theme.Material3.Light.NoActionBar">
        
        <item name="android:statusBarColor">@color/white_background</item>
        <item name="android:navigationBarColor">@color/white_background</item>
        
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Theme.ReminderApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/hey_logo_padded</item>
        <item name="postSplashScreenTheme">@style/Theme.ReminderApp</item>
    </style>
</resources>